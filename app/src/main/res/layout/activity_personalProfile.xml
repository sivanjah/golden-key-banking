<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_up_second"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

android:background="@drawable/pic3"
    tools:context="com.example.sivanjaanandaraja.e_banking.Delete">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="28dp">

    </ScrollView>

    <LinearLayout
        android:id="@+id/layoutOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="46dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="Register Here!"
            android:textColor="#ffffff"
            android:textSize="40dp" />


        <EditText
            android:id="@+id/fname"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:alpha="0.6"
            android:background="#B2EBF2"
            android:hint="  First name" />


        <EditText
            android:id="@+id/lname"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:alpha="0.6"
            android:background="#B2EBF2"
            android:hint="  Last name"

            />

        <EditText
            android:id="@+id/editMobile"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:alpha="0.6"
            android:background="#B2EBF2"
            android:hint="  Your Mobile"

            />

        <EditText
            android:id="@+id/Acnumber"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:alpha="0.6"
            android:background="#B2EBF2"
            android:hint="  Account Number"

            />

        <EditText
            android:id="@+id/Idnumber"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:alpha="0.6"
            android:background="#B2EBF2"
            android:hint="  Your ID number"

            />


        <Button
            android:id="@+id/SaveInformation"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:alpha="0.8"
            android:background="#303F9F"
            android:onClick="Save"
            android:text="Save" />


        />

    </LinearLayout>
</RelativeLayout>
